<div class="full-width-container wishlist-container">
  <!-- Hero Banner -->
  <div class="wishlist-hero bg-white flex">
    <h1 class="wishlist-hero--title gold">{{ page.title }}</h1>
  </div>
  <!-- Product tile Grid -->
  <div class="wishlist-grid flex">
    {% for product in collections.all.products %}
      {% assign featured_product_handle = product.handle %}
      {% include 'product-tile', tile_class: 'wishlist-tile pdp-tile', featured_product_handle  %}
    {% endfor %}
    <div class="wishlist-grid--empty-list flex">
      <div class="empty-list--info">
        <h6 class="empty-list--text black">Looks like you haven't started a wishlist yet...</h6>
        <a class="btn btn--gold-white reverse empty-list--btn" href="/collections/all">Start Shopping</a>
      </div>
    </div>
  </div>
  <!-- Loader -->
  <div class="wishlist-loader">
    <img class="wishlist-loader--image" src="{{ 'icn-wishlist.svg' | asset_url }}" alt="Wishlist loading">
    <p class="wishlist-loader--text">Loading your customized wishlist...</p>
  </div>

</div>
<!-- Custom Bottom Link -->
{% include 'global-footer-custom-link', custom_class: 'wishlist-custom'  %}